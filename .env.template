# ======================
# PrepWise Environment
# Copy to .env and fill values
# ======================

# -------- AI / APIs --------
GEMINI_API_KEY=your_gemini_api_key_here

# -------- Frontend (Flask) --------
# Flask session secret (change in prod!)
SECRET_KEY=change_me_in_prod
# Where the frontend should call the backend (Compose uses service name "backend")
BACKEND_API_URL=http://backend:8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5000
DEBUG=false

# -------- Backend (FastAPI) --------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
# CORS: comma-separated list (add Cloud Run frontend URL after deploy)
CORS_ALLOWED_ORIGINS=http://localhost:5000
LOG_LEVEL=INFO

# -------- Models --------
# Point to your shipped LSTM model (inside backend image)
VIDEO_MODEL_PATH=/app/models/video/final_best_model.h5
WHISPER_MODEL=base
USE_GPU=false

# -------- Storage / DB (optional) --------
DATABASE_URL=sqlite:///./prepwise.db
LOG_FILE=logs/prepwise.log

# -------- Dev hot-reload (local only) --------
RELOAD=false
