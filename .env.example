# PrepWise Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (required for AI feedback generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend Configuration  
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5000

# Model Paths (optional - defaults will be used if not specified)
VIDEO_MODEL_PATH=/app/models/video/final_best_model.h5

# Database Configuration (optional)
DATABASE_URL=sqlite:///./prepwise.db

# Logging Configuration
LOG_LEVEL=INFO

# AI Model Configuration
WHISPER_MODEL=base
USE_GPU=false

# Development Settings
DEBUG=false
RELOAD=false